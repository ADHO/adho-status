{
  "name": "adho-status",
  "version": "0.1.0",
  "description": "A dashboard for ADHO status checks.",
  "author": "Simon Wiles",
  "license": "MIT",
  "scripts": {
    "dev": "parcel --no-cache index.html",
    "build": "parcel build index.html --detailed-report",
    "build:production": "rm -rf dist && parcel build --no-cache --no-source-maps --public-url '.' index.html && yarn postbuild",
    "postbuild": "ncp src/assets/favicon dist --filter='(favicon|favicon.ico|android.*|browserconfig.xml|mstile.*)$'",
    "gh-deploy": "yarn build:production && bin/gh-deploy.sh",
    "lint": "eslint src/ --ext jsx --ext js",
    "test": "jest",
    "test:watch": "jest --watch",
    "coverage": "jest --coverage"
  },
  "dependencies": {
    "prop-types": "^15.8.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.16.7",
    "@parcel/babel-preset-env": "^2.4.1",
    "@parcel/packager-raw-url": "2.4.1",
    "@parcel/transformer-sass": "2.4.1",
    "@parcel/transformer-webmanifest": "2.4.1",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "eslint": "^8.13.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-parcel2": "^1.0.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.4.0",
    "jest": "^26.6.3",
    "ncp": "^2.0.0",
    "parcel": "^2.4.1",
    "sass": "^1.50.0"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "./__tests__/setupFilesAfterEnv.js"
    ],
    "roots": [
      "./__tests__/components",
      "./__tests__/utils",
      "src/"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!**/node_modules/**"
    ],
    "coveragePathIgnorePatterns": [
      "src/index.js"
    ]
  },
  "resolutions": {
    "elliptic": "^6.5.4",
    "is-svg": "^4.2.2"
  }
}
